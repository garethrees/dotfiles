#!/bin/bash
#
# Via Reorx (http://apple.stackexchange.com/a/223446/194505)

set -e

# Reverse because we want to set the most-preferred device as current
services=$(networksetup -listnetworkserviceorder | grep 'Hardware Port' | tac)

while read line; do
  sname=$(echo $line | awk -F  "(, )|(: )|[)]" '{print $2}')
  sdev=$(echo $line | awk -F  "(, )|(: )|[)]" '{print $4}')
  #echo "[CURRENT SERVICE] NAME: $sname, SDEV: $sdev, CURRENT: $currentservice"
  if [ -n "$sdev" ]; then
    ifconfig $sdev 2>/dev/null | grep 'status: active' > /dev/null 2>&1
    rc="$?"
    if [ "$rc" -eq 0 ]; then
      currentservice="$sname"
    fi
  fi
done <<< "$(echo "$services")"

if [ -n "$currentservice" ]; then
  echo $currentservice
else
  >&2 echo "Could not find current service"
  exit 1
fi
