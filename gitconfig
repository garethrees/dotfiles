[user]
  name = Gareth Rees
  email = ADD_EMAIL_HERE
[alias]
  ap = add -p
  co = checkout
  fo = fetch origin -p
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(blue)(%an <%ae>)%Creset' --abbrev-commit --date=relative
  ls = log --pretty=format:'%Cred%h %Creset%s %Cblue(%an <%ae>)%Creset' -n 15
  ll = log --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cblue(%an)%Creset' --decorate --numstat
  d  = diff
  ds = diff --staged
  r  = rebase
  ri = rebase -i
  s  = stash
  sa = stash apply
  sl = stash list
  sp = stash pop
  st = status -s
  standup = log --since yesterday --oneline --author ADD_EMAIL_HERE
  today = git log --since today --oneline --author ADD_EMAIL_HERE
  # search logs for commit ticket number
  # e.g. git find #1234
  find = "!f() { git log --oneline | grep \"$@\"; }; f"
[pager]
  diff = /usr/local/Library/LinkedKegs/git/share/git-core/contrib/diff-highlight/diff-highlight | less
  log  = /usr/local/Library/LinkedKegs/git/share/git-core/contrib/diff-highlight/diff-highlight | less
  show = /usr/local/Library/LinkedKegs/git/share/git-core/contrib/diff-highlight/diff-highlight | less
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore_global
[rebase]
  autosquash = true
